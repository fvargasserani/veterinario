<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>


<table>
  <thead>
    <tr>
      <th>Average weight (kg)</th>
      <th>Average height (cm)</th>
      <th>Maximum weight (kg)</th>
      <th>Maximum height (cm)</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avg_weight / @pet.history_count %></td>
      <td><%= @pet.avg_height / @pet.history_count%></td>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>